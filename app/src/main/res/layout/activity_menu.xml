<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MenuActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAppBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="Fix"
                android:textColor="#000000"
                android:textSize="30dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/cardViewAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationLayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Home Service Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewEarnPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="#0040FF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollCategories" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Service"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />


                    </LinearLayout>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/homeServiceGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="4"
                app:rowCount="3"
                android:layout_marginBottom="16dp">


                <!-- Cleaning -->

                <LinearLayout
                    android:id="@+id/cleaningService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/cleaner"
                            android:contentDescription="Cleaning" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Cleaning"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Pest Control -->

                <LinearLayout
                    android:id="@+id/pestControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/pestcontroll"
                            android:contentDescription="PestControl" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Pest Control"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Plumber -->

                <LinearLayout
                    android:id="@+id/plumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/plumber"
                            android:contentDescription="Plumber" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Plumber"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Plumber -->

                <LinearLayout
                    android:id="@+id/gardening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/gardening"
                            android:contentDescription="Gardening" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gardening"
                        android:textSize="12sp" />

                </LinearLayout>


            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent" >

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

        <ImageView
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:src="@drawable/menu"
            android:contentDescription="Menu"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

        <ImageView
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:src="@drawable/notification"
            android:contentDescription="Notifications"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:src="@drawable/user"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>