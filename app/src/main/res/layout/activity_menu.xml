                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gardening"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Painting -->

                <LinearLayout
