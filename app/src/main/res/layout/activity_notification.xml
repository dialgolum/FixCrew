<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".NotificationActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAppBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/backarrow"
                android:scaleType="centerInside"
                android:background="@null"
                android:contentDescription="Back"
                android:adjustViewBounds="true"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="Notifications"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvnotif1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#43B6BBFF"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10% Discount before 5th Aprile"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Hire Now"
                android:textSize="13dp"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                app:strokeColor="@color/primary"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNotiftime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.20"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/cvnotif1"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvnotif2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#43B6BBFF"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNotiftime">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You earned 20 points"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:text="Use"
                android:textSize="13dp"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                app:strokeColor="@color/primary"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/21"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/cvnotif2"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Navigation Bar -->

    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent" >

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

        <ImageView
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/menu"
            android:contentDescription="Menu"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

        <ImageView
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/notification"
            android:contentDescription="Notifications"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/user"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            app:tint="#0040FF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>